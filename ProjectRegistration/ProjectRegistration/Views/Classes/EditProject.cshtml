@model ProjectRegistration.Models.Project

@{
    ViewData["Title"] = "Sửa đồ án";
}

<link href="~/vendors/icheck/skins/flat/green.css" rel="stylesheet" />
<link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/vendors/normalize-css/normalize.css" rel="stylesheet" />
<link href="~/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />

<a class="pt-4" asp-action="ViewProjectList" asp-route-id="@ViewData["id"]"><i class="fa fa-chevron-left"></i> Quay trở lại</a>

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Sửa đồ án</h3>
        </div>

    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Đồ án</h2>

                    <ul class="nav navbar-right panel_toolbox" style="min-width:fit-content">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form asp-action="CreateProject" enctype="multipart/form-data" data-parsley-validate class="form-horizontal form-label-left">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="item form-group mb-4">
                            <label asp-for="Pname" class="col-form-label col-md-3 col-sm-3 label-align">
                            </label>
                            <div class="col-md-4 col-sm-4 ">
                                <input asp-for="Pname" required="required" class="form-control">
                            </div>
                            <span asp-validation-for="Pname" class="text-danger"></span>
                        </div>

                        <div class="item form-group mb-4">
                            <label asp-for="Info" class="col-form-label col-md-3 col-sm-3 label-align">
                            </label>
                            <div class="col-md-4 col-sm-4 ">
                                <input asp-for="Info" class="form-control">
                            </div>
                            <span asp-validation-for="Info" class="text-danger"></span>
                        </div>

                        <div class="item form-group mb-4">
                            <label asp-for="GuidingLecturerId" class="col-form-label col-md-3 col-sm-3 label-align"></label>
                            <div class="col-md-4 col-sm-4 ">
                                <select asp-for="GuidingLecturerId" asp-items="ViewBag.GuidingLecturerId" class="form-control">
                                </select>
                            </div>
                        </div>

                        <div class="item form-group mb-4">
                            <label asp-for="GradingLecturerId" class="col-form-label col-md-3 col-sm-3 label-align"></label>
                            <div class="col-md-4 col-sm-4 ">
                                <select asp-for="GradingLecturerId" asp-items="ViewBag.GradingLecturerId" class="form-control">
                                </select>
                            </div>
                        </div>


                        <input type="hidden" asp-for="ClassId" value="@ViewData["id"]" />
                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="offset-md-4 center-margin">
                                <a class="btn btn-danger" type="button" asp-action="ViewProjectList" asp-route-id="@ViewData["id"]">Quay lại</a>
                                <button class="btn btn-primary" type="reset">Nhập lại</button>
                                <button type="submit" class="btn btn-success">Tạo mới</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/vendors/fastclick/lib/fastclick.js"></script>
<script src="~/vendors/moment/min/moment.min.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            var msg = '@TempData["message"]';
            var lim = '@TempData["limit"]';
            if (msg == 'Project1GuidingLimitReached') {
                alert("Sửa đồ án thất bại. Giảng viên hướng dẫn đã đạt giới hạn hướng dẫn số lượng đồ án 1 và 2: " + lim);
            }
            if (msg == 'GraduationThesisGuidingLimitReached') {
                alert("Sửa đồ án thất bại. Giảng viên hướng dẫn đã đạt giới hạn hướng dẫn số lượng khóa luận tốt nghiệp: " + lim);
            }
        });
    </script>
}
