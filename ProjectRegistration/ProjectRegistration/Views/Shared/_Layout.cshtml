                                    <img src="../../files/default-avatar.jpg" alt="">John Doe
                                </a>
                                <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="javascript:;"> Hồ sơ</a>
                                    <a class="dropdown-item" href=" "><i class="fa fa-sign-out pull-right"></i> Đăng xuất</a>
                                </div>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->

            <!-- page content -->
            <main role="main" class="right_col">
                @RenderBody()
            </main>
            <!-- /page content -->

            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    2023 - Project Registration - Made by Nguyen Duy Hao and Chau Vinh Sinh
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->

        </div>
