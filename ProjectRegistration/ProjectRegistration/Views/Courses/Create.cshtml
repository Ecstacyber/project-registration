@model ProjectRegistration.Models.Course

@{
    ViewData["Title"] = "Tạo môn học mới";
}

<a class="pt-4" asp-action="Index"><i class="fa fa-chevron-left"></i> Quay trở lại</a>

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Thêm môn học mới</h3>
        </div>

    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Môn học</h2>

                    <ul class="nav navbar-right panel_toolbox" style="min-width:fit-content">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-4 center-margin">
                            <div class="form-group row mt-2">
                                <label asp-for="CourseId"></label>
                                <input asp-for="CourseId" type="text" class="form-control">
                                <span asp-validation-for="CourseId" class="text-danger"></span>
                            </div>
                            <div class="form-group row mt-3">
                                <label asp-for="CourseName"></label>
                                <input asp-for="CourseName" type="text" class="form-control">
                                <span asp-validation-for="CourseName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="offset-md-4 center-margin">
                                <a class="btn btn-danger" type="button" asp-action="Index">Quay lại</a>
                                <button class="btn btn-primary" type="reset">Nhập lại</button>
                                <button type="submit" class="btn btn-success">Thêm mới</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
