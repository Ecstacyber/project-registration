@model ProjectRegistration.Models.User
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="Login" id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Username" class="form-label"></label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="UserPassword" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="UserPassword" class="form-label"></label>
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label class="form-label">
                            <input class="form-check-input" type="checkbox" /> Nhớ tài khoản
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
